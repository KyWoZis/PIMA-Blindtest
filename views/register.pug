extends layout
block head
  title Register
block content
  form.border-black.border-2.grid.grid-cols-2.p-5.gap-2(style="margin-top: 100px", action="/register", method="POST")
    label.border-2.border-blue-500.rounded-xl(for="username") Username:
    input.bg-gray-100.rounded-lg.border-2.border-gray-300(type='text', id='username', name='username')

    label.border-2.border-blue-500.rounded-xl(for='password') Password:
    input.bg-gray-100.rounded-lg.border-2.border-gray-300(type='password', id='password', name='password')

    button.col-span-2.border-2.border-blue-500.rounded-xl(type='submit', class="hover:bg-blue-200") Register

