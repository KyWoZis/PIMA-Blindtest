extends layout
block head
  title Game
  script(src='/javascripts/game.js')
block content
  .container.mx-auto.flex.flex-col.justify-center.align-center.w-full.p-50

    div#start.container.mx-auto
      //- Bouton de lecture de la première musique
      button#playButton(onclick="beginBT()", class="hover:bg-red-400").text-4xl.text-bold.text-white.container.pb-10.pt-10.items-center.bg-red-500.p-2.rounded-lg.mx-auto.
        Play

    div.relative.hidden.max-w-10xl.mx-auto.p-0.mt-80#video
      div.w-full.h-full.absolute.bg-black.container.z-10#hide
      video#video-player
      .mb-10

    div#play.hidden.container.mx-auto.border-2.border-black.p-10
      //- Ajout de l'élément vidéo avec l'ID "video-player"

      //- Bouton de musique suivant
      //- n'existe plus button#nextButton(onclick="nextButton()") Next

      //- Zone de texte

      // a faire : faire une page intermediaire qui permet de choisir les informations a afficher parmis (nom de la musique, nom de l'artiste, origine, type de musique)
      label.mx-auto Nom de la musique :
      .mb-4
      input#textInputMusic_name(type="text",class="p-0.5").border.border-gray-300.w-full.bg-gray-50.p1.rounded-lg
      .mb-4
      label.mx-auto Nom de l'artiste :
      .mb-4
      input#textInputArtist(type="text",class="p-0.5").border.border-gray-300.w-full.bg-gray-50.p1.rounded-lg
      .mb-4
      label.mx-auto Origine :
      .mb-4
      input#textInputOrigin(type="text",class="p-0.5").border.border-gray-300.w-full.bg-gray-50.p1.rounded-lg
      .mb-4
      label.mx-auto Type de musique :
      .mb-4
      input#textInputMusic_Type(type="text",class="p-0.5").border.border-gray-300.w-full.bg-gray-50.p1.rounded-lg
      .mb-4

      //- Bouton de validation de la réponse
      button#submitButton(onclick="checkAnswer()", style="display: none") Submit

    #transition.hidden.container.mx-auto.p-10.border-2.border-black
      p.text-center.text-gray-900.text-bold.text-2xl Good answer was :
      p.border.text-center.border-gray-300.w-full.bg-gray-50.p1.rounded-lg.text-xl#answerMusicName
      p.border.text-center.border-gray-300.w-full.bg-gray-50.p1.rounded-lg.text-xl#answerArtistName
      p.border.text-center.border-gray-300.w-full.bg-gray-50.p1.rounded-lg.text-xl#answerOrigin
      p.border.text-center.border-gray-300.w-full.bg-gray-50.p1.rounded-lg.text-xl#answerMusicType
      p.text-center.text-gray-800.text-bold.text-2xl Were you correct ?
      p.border.text-center.border-gray-300.w-full.bg-gray-50.p1.rounded-lg.text-xl#correctionMusicName
      p.border.text-center.border-gray-300.w-full.bg-gray-50.p1.rounded-lg.text-xl#correctionArtistName
      p.border.text-center.border-gray-300.w-full.bg-gray-50.p1.rounded-lg.text-xl#correctionOrigin
      p.border.text-center.border-gray-300.w-full.bg-gray-50.p1.rounded-lg.text-xl#correctionMusicType
    #end.hidden.container.p-10
      p THE END !!!
    #score.hidden.container.p-10
      p.text-center.text-gray-900.text-bold.text-2xl Your score is :
      p.border.text-center.border-gray-300.w-full.bg-gray-50.p1.rounded-lg.text-xl#scoreValue
  script var data = !{JSON.stringify(musics)}
  script var infoMusics = !{JSON.stringify(infoMusics)}